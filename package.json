{
  "name": "watcher",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch \"src/**\" --ext \"c\"  --exec \"gcc  src/storage.c src/notify.c src/hello.c -o hello && ./hello ./playground\"",
    "build": "gcc  src/storage.c src/notify.c src/hello.c -o hello",
    "nftw": "nodemon --watch src/nftw.c --exec \"gcc src/nftw.c && ./a.out ./playground\"",
    "watch": "nodemon --watch src/watch.c --exec \"gcc src/watch.c && ./a.out ./playground\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/pidusage": "^2.0.1",
    "execa": "^5.1.1",
    "jest": "^27.2.4",
    "nodemon": "^2.0.13",
    "pidusage": "^2.0.21",
    "wait-for-expect": "^3.0.2"
  }
}
