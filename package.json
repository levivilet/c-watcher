{
  "name": "watcher",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch src/hello.c --exec \"gcc src/hello.c -o hello && ./hello ./playground\"",
    "build": "gcc src/hello.c -o hello",
    "nftw": "nodemon --watch src/nftw.c --exec \"gcc src/nftw.c && ./a.out ./playground\"",
    "watch": "nodemon --watch src/watch.c --exec \"gcc src/watch.c && ./a.out ./playground\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
